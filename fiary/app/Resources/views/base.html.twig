<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href= "{{ asset('css/mystyle.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>


<div class="wrapper">

    <nav id="sidebar">
        <span class="dot"></span>

        <div class="sidebar-header">
            <span class="mr-auto">Username</span>
            <a id="log-out" class="ml-auto" href="{{ path('homepage') }}"><img  src=" {{ asset('img/exit.svg') }}" alt="logout symbol"></a>
        </div>

        <ul class="list-unstyled components">
            <li class="active nav-item"><a class="nav-link" href="{{ path('homepage') }}">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('pages') }}">Statistiken</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('pages') }}">Einträge</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('pages') }}">Info & Downloads</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('pages') }}">Schwarzes Brett</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('pages') }}">Support</a></li>
        </ul>
    </nav>

    <div id="content">

           <div class="menu-toggler container-fluid">
               <!--<span>Menu</span>-->
               <button onclick="closeNav()" id="sidebarCollapse" class="btn">
                   <i class="fas fa-align-left"></i>
                   <img  id="arrow" src=" {{ asset('img/close-menu.svg') }}" alt="logout symbol">
               </button>
           </div>

        {% block body %}{% endblock %}
    </div>
</div>

